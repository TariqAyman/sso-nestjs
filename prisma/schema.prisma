// =========================================================================
// PRISMA SCHEMA - COMPLETE SSO & USER MANAGEMENT SYSTEM (NEW VERSION)
// =========================================================================
// Main schema file that references all split schema files
// This schema is based on the new SQL database structure and organized
// into logical sections for better maintainability and readability
// =========================================================================

generator client {
    provider = "prisma-client-js",
    previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

